<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:gravity="center"
    android:padding="16dp"
    tools:context=".MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    tools:ignore="UselessParent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:inputType="TODO"
        android:minHeight="48dp"
        android:text="Energysmart: App para edir tu consumo de energetico"
        tools:ignore="Autofill,HardcodedText,LabelFor,TextFields,VisualLintTextFieldSize" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:src="@drawable/icon_cuenta"
        tools:ignore="ContentDescription,ImageContrastCheck" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:inputType="TODO"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="20sp"
        android:background="@drawable/rounded_corner"
        android:padding="18dp"
        tools:ignore="Autofill,HardcodedText,TextFields,VisualLintTextFieldSize" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="20sp"
        android:background="@drawable/rounded_corner"
        android:padding="18dp"
        tools:ignore="Autofill,HardcodedText,TextFields,VisualLintTextFieldSize" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:backgroundTint="#000000"
        android:layout_marginTop="32dp"
        android:padding="18dp"
        android:textSize="20sp"
        tools:ignore="HardcodedText,VisualLintButtonSize" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Social login"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginTop="32dp"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center">

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="16dp"
            android:src="@drawable/facebook"
            tools:ignore="ContentDescription" />

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="16dp"
            android:src="@drawable/gmail"
            tools:ignore="ContentDescription" />
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="16dp"
            android:src="@drawable/linkedin"
            tools:ignore="ContentDescription" />


    </LinearLayout>







</LinearLayout>



</RelativeLayout>